<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cleme.test_boussole.MainActivity">

    <Button
        android:text="@string/btnGauche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="42dp"
        android:id="@+id/buttonGauche" />

    <Button
        android:text="@string/btnDroite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonGauche"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:id="@+id/buttonDroite" />

    <ImageView
        android:src="@drawable/aiguilleboussole"
        android:id="@+id/boussoleImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonGauche"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonGauche"
        android:layout_marginStart="39dp"
        android:id="@+id/textViewLatitude" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonDroite"
        android:layout_alignStart="@+id/textViewLatitude"
        android:id="@+id/textViewLongitude" />
</RelativeLayout>
